{
    "name": "Link shortener",
    "description": "Click to short link with to.dyakov.space",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_title": "to.dyakov.space",
        "default_icon": "favicon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "favicon.png"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    }
}
